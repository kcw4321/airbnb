
<div class="container">
  <div class="row">
    <h2 class='text-center'> List of bookings</h2>
    <div class='col-xs-6 text-center'><%= image_tag 'placeholder.jpg', width: '90%' %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6">
      <div class="card_body">
        <div class="card_category"><a href="#">Photos</a>
        </div>
        <% @bookings.each do |booking| %>
          <div class="card_date">
            <span class="card_date_arrival"><p>Date of arrival <%= booking.check_in %></p> </span>
              <span class="card_date_departure"><p>Date of departure <%= booking.check_out %></p></span>
          </div>
          <div class="card_title">address of <%= booking.flat.title %></div>
          <div class="card_subtitle"><%= booking.flat.street %>, <%= ' ' %><%= booking.flat.city %></p></div>
          <div class="card_description">Price <%= booking.flat.price %>
          </div>
        <%end%>
        <i class="fa fa-chevron-circle-left"></i><%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>
