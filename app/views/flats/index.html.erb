<h1 class="text-center">Flats</h1>
<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <%= image_tag 'map-placeholder.png', width: '80%' %>
    </div>
    <div class="col-xs-6">
      <div class="row">
          <% @flats.each do |flat| %>
        <div class="col-xs-6">
          <p class="flat-details"><%= flat.title %></p>
            <% if flat.picture? %>
            <%= image_tag flat.picture.url(:thumb) %>
            <% else %>
            <%= image_tag 'placeholder.jpg', height: '100px' %>
            <% end %>
          <p><%= flat.price %>â‚¬ per night</p>
          <p>Capacity: <%= flat.capacity %></p>
          <p><%= link_to "View flat", flat_path(flat), class: "btn btn-primary" %></p>
        </div>
      <% end %>
      <i class="fa fa-chevron-circle-left"></i><%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>



